	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :email%>
	<%= f.text_field :email %>

	<%= f.label :commment %>
	<%= f.text_area :comment %>

	<%= f.submit 'submit' %>
	<% end %>

</div>